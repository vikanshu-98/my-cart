<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <servlet>
        <servlet-name>first</servlet-name>
        <servlet-class>com.org.servlet.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>first</servlet-name>
        <url-pattern>/sign-up</url-pattern>
    </servlet-mapping>
    <!--servlet2-->
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/LogIn.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/LogIn</url-pattern>
    </servlet-mapping>
     <!--login servlet 3-->
    <servlet>
        <servlet-name>second</servlet-name>
        <servlet-class>com.org.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>second</servlet-name>
        <url-pattern>/login</url-pattern> 
    </servlet-mapping>
    <!--logut-->
    <servlet>
        <servlet-name>third</servlet-name>
        <servlet-class>com.org.servlet.LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>third</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!--end of logout-->
    <!-- add categories-->
    <servlet>
        <servlet-name>category</servlet-name>
        <servlet-class>com.org.servlet.AddCategories</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>category</servlet-name>
        <url-pattern>/Category</url-pattern>
    </servlet-mapping>
    <!-- end of add categories-->
    
    <!--update servlet of user detail-->
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>com.org.servlet.updateInformation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/Updatedetailsofuser</url-pattern> 
    </servlet-mapping>
    
    
    
    <!-- end of update servlet of user detail-->
    
     
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
